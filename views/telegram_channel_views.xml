    <!-- Action -->
    <record id="action_telegram_video" model="ir.actions.act_window">
        <field name="name">Vid√©os Telegram</field>
        <field name="res_model">telegram.channel.video</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_telegram_video_search"/>
        <field name="context">{'search_default_filter_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
