    <record id="view_youtube_playlist_add_wizard_form" model="ir.ui.view">
        <field name="name">youtube.playlist.add.wizard.form</field>
        <field name="model">youtube.playlist.add.wizard</field>
        <field name="arch" type="xml">
            <form string="Ajouter des mÃ©dias">
                <group>
                    <field name="playlist_id" readonly="1"/>
                    <field name="download_ids" widget="many2many_tags"
                           domain="[('state', '=', 'done')]"/>
                </group>
                <footer>
                    <button name="action_add" string="Ajouter" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
