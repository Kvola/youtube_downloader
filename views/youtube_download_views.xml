                                <field name="name"/>
                            </div>
                            <div class="yt_player_info_meta">
                                <span invisible="not video_author" class="me-3">
                                    <i class="fa fa-user me-1" title="Auteur"/>
                                    <field name="video_author" class="d-inline"/>
                                </span>
                                <span invisible="video_duration == 0" class="me-3">
                                    <i class="fa fa-clock-o me-1" title="Dur√©e"/>
                                    <field name="video_duration_display" class="d-inline"/>
                                </span>
                                <span invisible="file_size == 0" class="me-3">
                                    <i class="fa fa-hdd-o me-1" title="Taille"/>
                                    <field name="file_size_display" class="d-inline"/>
                                </span>
                                <span invisible="not quality">
                                    <i class="fa fa-diamond me-1" title="Qualit√©"/>
                                    <field name="quality" class="d-inline"/>
                                </span>
                            </div>
                        </div>
                    </div>
                </sheet>
                <footer>
                    <button string="Fermer" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
