                                   readonly="state != 'draft'"/>
                            <field name="video_id" invisible="not video_id"/>
                            <field name="quality" readonly="state != 'draft'"/>
                            <field name="output_format" readonly="state != 'draft'"/>
                            <field name="priority"/>
                            <field name="download_path"
                                   placeholder="Laisser vide pour le r√©pertoire par d√©faut"
                                   readonly="state != 'draft'"/>
                            <field name="effective_path" string="R√©pertoire effectif"/>
                        </group>

                        <!-- Colonne droite : Infos vid√©o -->
