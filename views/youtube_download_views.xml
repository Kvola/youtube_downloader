                            <field name="video_title" invisible="not video_title"/>
                            <field name="video_author" invisible="not video_author"/>
                            <field name="video_duration_display" string="Dur√©e"
                                   invisible="video_duration == 0"/>
                            <field name="video_views" invisible="video_views == 0"/>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>

                    <!-- Miniature -->
