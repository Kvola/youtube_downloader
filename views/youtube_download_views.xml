                        <group string="üñºÔ∏è Miniature" colspan="2">
                            <field name="video_thumbnail_url" widget="image_url"
                                   nolabel="1" class="text-center"
                                   options="{'size': [0, 300]}"/>
                        </group>
                    </group>

                    <!-- Onglets -->
                    <notebook>
                        <!-- Onglet Options avanc√©es -->
                        <page string="‚öôÔ∏è Options avanc√©es" name="advanced">
                            <group>
                                <group string="Sous-titres">
                                    <field name="download_subtitles" readonly="state != 'draft'"/>
                                    <field name="subtitle_lang"
                                           invisible="not download_subtitles"
                                           readonly="state != 'draft'"/>
                                    <field name="embed_subtitles"
                                           invisible="not download_subtitles"
                                           readonly="state != 'draft'"/>
                                </group>
                                <group string="Autres options">
                                    <field name="download_thumbnail" readonly="state != 'draft'"/>
                                    <field name="use_proxy" readonly="state != 'draft'"/>
                                    <field name="proxy_url"
                                           invisible="not use_proxy"
                                           required="use_proxy"
                                           readonly="state != 'draft'"/>
                                </group>
                            </group>
                            <group>
                                <group string="Robustesse">
                                    <field name="auto_retry"/>
                                    <field name="max_retries"/>
                                    <field name="retry_count" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <!-- Onglet R√©sultat t√©l√©chargement -->
                        <page string="üì¶ R√©sultat" name="result"
                              invisible="state != 'done'">
                            <group>
                                <group string="Fichier t√©l√©charg√©">
                                    <field name="file_path" string="Chemin complet"/>
                                    <field name="file_name"/>
                                    <field name="file_size_display" string="Taille"/>
                                    <field name="download_speed"/>
                                    <field name="download_date"/>
                                    <field name="download_duration" string="Dur√©e du dl (sec)"/>
                                </group>
                                <group string="Actions sur le fichier">
                                    <div class="mt-3">
                                        <button name="action_open_file_location"
                                                string="üìÅ Voir l'emplacement"
                                                type="object"
                                                class="btn btn-secondary me-2"
                                                invisible="not file_exists"/>
                                        <button name="action_convert_to_mp4"
                                                string="üîÑ Convertir en MP4"
                                                type="object"
                                                class="btn btn-warning me-2"
                                                invisible="output_format in ('mp4', 'mp3', 'wav', 'ogg', 'flac', 'aac', 'm4a', 'opus')"
                                                confirm="Convertir le fichier en MP4 pour une meilleure compatibilit√© navigateur ?"/>
                                        <button name="action_delete_file"
                                                string="üóëÔ∏è Supprimer le fichier"
                                                type="object"
                                                class="btn btn-danger"
                                                confirm="√ätes-vous s√ªr de vouloir supprimer le fichier physique ?"/>
                                    </div>
                                </group>
                            </group>
                        </page>

                        <!-- Onglet Playlist -->
                        <page string="üìã Playlist" name="playlist"
                              invisible="not is_playlist">
                            <group>
                                <group>
                                    <field name="playlist_id"/>
                                    <field name="playlist_title"/>
                                    <field name="playlist_index"
                                           invisible="playlist_index == 0"/>
                                    <field name="parent_playlist_id"
                                           invisible="not parent_playlist_id"/>
                                </group>
                            </group>
                            <field name="playlist_item_ids" invisible="not playlist_item_ids">
                                <tree>
                                    <field name="playlist_index" string="#"/>
                                    <field name="reference"/>
                                    <field name="name"/>
                                    <field name="quality"/>
                                    <field name="progress" widget="progressbar"/>
                                    <field name="state" widget="badge"
